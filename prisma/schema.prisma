// Remeber: any changes in enum or in the models, always update it dependencies, pls

enum AccountType {
  CORRENTE
  POUPANCA
}

enum TransactionType {
  TED
  PIX
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  accounts           Account[]
  transactionHistory TransactionHistory[]

  @@map("users")
}

model Account {
  id           Int         @id @default(autoincrement())
  user_id      Int
  balance      Float
  account_type AccountType
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt

  user         User          @relation(fields: [user_id], references: [id])
  transactions Transaction[]

  @@map("accounts")
}

model Transaction {
  id                   Int               @id @default(autoincrement())
  account_id           Int
  transaction_type     TransactionType
  amount               Float
  transaction_date     DateTime
  cpf_recipient        String?
  cnpj_recipient       String?
  recipient_name       String
  bank                 String?
  branch               String?
  account_recipient    String?
  pix_key              String?
  transaction_password String
  created_at           DateTime          @default(now())
  updated_at           DateTime          @updatedAt

  account            Account              @relation(fields: [account_id], references: [id])
  transactionHistory TransactionHistory[] @relation("TransactionHistoryTransactions")

  @@map("transactions")
}

model TransactionHistory {
  id             Int      @id @default(autoincrement())
  transaction_id Int
  user_id        Int
  movement_date  DateTime
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  transaction Transaction @relation("TransactionHistoryTransactions", fields: [transaction_id], references: [id])
  user        User        @relation(fields: [user_id], references: [id])

  @@map("transaction_history")
}
